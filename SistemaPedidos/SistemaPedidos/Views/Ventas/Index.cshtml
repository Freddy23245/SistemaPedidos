@model Ventas
<button class="btn btn-success mb-3" id="OpenModal" data-toggle="modal" data-target="#myModal">Agregar Direccion de entrega</button>
<table class="table tabletable-bordered">
    <thead>
        <tr>
            <th>Cliente</th>
            <th>Tipo</th>
            <th>Fecha</th>
            <th colspan="3">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Ventas venta in ViewBag.Ventas)
        {
            <tr>
                <td>@venta.IdClienteNavigation.Nombre  @venta.IdClienteNavigation.Apellido</td>
                <td>@venta.IdTipoNavigation.Nombre</td>
                <td>@venta.Fecha</td>
                <td><a asp-action="Modificar" asp-controller="Ventas" asp-route-id="@venta.IdVenta" class="btn btn-primary">Ver Detalle</a></td>
                <td><a asp-action="Modificar" asp-controller="Ventas" asp-route-id="@venta.IdVenta" class="btn btn-primary">Editar</a></td>
                <td><a asp-action="Eliminar" onclick="return confirm('¿Desea eliminar el Registro?')" asp-controller="Ventas" asp-route-id="@venta.IdVenta" class="btn btn-danger">Eliminar</a></td>
            </tr>
        }
    </tbody>
</table>
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Agregar Cliente</h4>
            </div>
            <div class="modal-body">
                <div class="hstack gap-3">

                    <form method="post" asp-action="NuevoCliente" asp-controller="Clientes">
                        <div class="row">
                            <input type="hidden" asp-for="IdCliente" />
                            <div class="form-group">
                                <label>Cliente</label>
                                <select asp-for="IdCliente" asp-items="@(new SelectList(ViewBag.Clientes,"IdCliente","Nombre"))" class="form-control"></select>
                                <span asp-validation-for="IdCliente" class="badge bg-danger"></span>
                            </div>
                            <div class="form-group">
                                <label>Tipo Comprobante</label>
                                <select asp-for="IdCliente" asp-items="@(new SelectList(ViewBag.Tipos,"IdTipo","Nombre"))" class="form-control"></select>
                                <span asp-validation-for="IdTipo" class="badge bg-danger"></span>
                            </div>
                            <div class="form-group">
                                <label>Fecha</label>
                                <input type="text" asp-for="Fecha" class="form-control col-md-6" />
                                <span asp-validation-for="Fecha" class="badge bg-danger"></span>
                            </div>

                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-success" data-dismiss="modal">Guardar</button>
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        </div>
                    </form>
                </div>
                <form method="post" asp-action="" asp-controller="Clientes">
                    <div class="row">
                        <input type="hidden" asp-for="IdCliente" />
                        <div class="form-group">
                            <label>Cliente</label>
                            <select asp-for="IdCliente" asp-items="@(new SelectList(ViewBag.Clientes,"IdCliente","Nombre"))" class="form-control"></select>
                            <span asp-validation-for="IdCliente" class="badge bg-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Tipo Comprobante</label>
                            <select asp-for="IdCliente" asp-items="@(new SelectList(ViewBag.Tipos,"IdTipo","Nombre"))" class="form-control"></select>
                            <span asp-validation-for="IdTipo" class="badge bg-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Fecha</label>
                            <input type="text" asp-for="Fecha" class="form-control col-md-6" />
                            <span asp-validation-for="Fecha" class="badge bg-danger"></span>
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-success" data-dismiss="modal">Guardar</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                </form>
            </div>

        </div>

    </div>
</div>
@section Scripts{
    <script>
        $(function () {
            $('#OpenModal').click(function () {
                $('#myModal').modal('show');
            })
        })
        $(function () {
            $('#ModCli').click(function () {
                $('#ModalEdit').modal('show');
            })
        })
    </script>
    }
